<Window x:Class="IHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client de sauvegarde distant" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Obtenir les tâches" Width="150" Margin="0 0 10 0"/>
            <Button Content="Lancer la tâche" Width="150" Margin="0 0 10 0"/>
            <Button Content="Supprimer la tâche" Width="150"/>
        </StackPanel>

        <ListView x:Name="taskList" Grid.Row="1" Margin="0 0 0 10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Name}" Width="120"/>
                    <GridViewColumn Header="Source" DisplayMemberBinding="{Binding Source}" Width="200"/>
                    <GridViewColumn Header="Cible" DisplayMemberBinding="{Binding Target}" Width="200"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                    <GridViewColumn Header="État" DisplayMemberBinding="{Binding State}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock x:Name="statusText" Grid.Row="2" FontWeight="Bold" Foreground="DarkGreen"/>
    </Grid>
</Window>

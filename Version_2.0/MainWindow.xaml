<Window x:Class="Version_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0"
        xmlns:buttons="clr-namespace:Version_2._0.View.Button"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">

    <Grid Background="#f3f3f3" Margin="0,0,0,-35">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>




        <StackPanel Grid.Column="0" Background="#e0e0e0" RenderTransformOrigin="0.473,0.899">

            <!--Button settings-->
            <Button Height="67" Width="76"
   FontSize="16"
   FontWeight="Bold"
   BorderThickness="55"
   Margin="0,25,0,0"
   Padding="10,5" Click="Button_Settings" >

                <Button.Background>
                    <ImageBrush ImageSource="/settings.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
               CornerRadius="8"/>
                    </ControlTemplate>
                </Button.Template>
                <Button Height="50" Width="80"
                   FontSize="16"
                   FontWeight="Bold"
                   BorderThickness="55"
                   Background="Green"
                   Foreground="White"
       
                   Padding="10,5"/>
            </Button>


            <!--Button Create-->
            <Button Height="50" Width="80"
    FontSize="16"
    FontWeight="Bold"
    BorderThickness="55"
    Background="Green"
    Foreground="White"
    Margin="0,30,0,15"
    Padding="10,5" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                CornerRadius="8">
                            <TextBlock Text="Create"
                      Foreground="{TemplateBinding Foreground}"
                      FontSize="{TemplateBinding FontSize}"
                      FontWeight="{TemplateBinding FontWeight}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button Height="50" Width="80"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="55"
                    Background="Green"
                    Foreground="White"
        
                    Padding="10,5" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                                <TextBlock Text="Create"
                                    Foreground="{TemplateBinding Foreground}"
                                    FontSize="{TemplateBinding FontSize}"
                                    FontWeight="{TemplateBinding FontWeight}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Button>

            <!--Button update-->
            <Button Height="50" Width="80"
    FontSize="16"
    FontWeight="Bold"
    BorderThickness="0"
    Background="DarkOrange"
    Foreground="White"
                    Margin="0,25,0,15"
    Padding="10,5" Click="Button_Click_Update">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                CornerRadius="8">
                            <TextBlock Text="Update"
                      Foreground="{TemplateBinding Foreground}"
                      FontSize="{TemplateBinding FontSize}"
                      FontWeight="{TemplateBinding FontWeight}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--button delete-->
            <Button Height="50" Width="80"
                FontSize="16"
                FontWeight="Bold"
                BorderThickness="0"
                Background="Red"
                Foreground="White"
                Margin="0,25,0,15"
                Padding="10,5" Click="DeleteButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
            CornerRadius="8">
                            <TextBlock Text="Delete"
                  Foreground="{TemplateBinding Foreground}"
                  FontSize="{TemplateBinding FontSize}"
                  FontWeight="{TemplateBinding FontWeight}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--button launch-->
            <Button Height="50" Width="80"
                FontSize="16"
                FontWeight="Bold"
                BorderThickness="0"
                Background="LightSeaGreen"
                Foreground="White"
                Margin="0,25,0,25"
                Padding="10,5" Click="LaunchButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                CornerRadius="8">
                            <TextBlock Text="Launch"
                      Foreground="{TemplateBinding Foreground}"
                      FontSize="{TemplateBinding FontSize}"
                      FontWeight="{TemplateBinding FontWeight}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="      List of Works" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <CheckBox Name="List_Works" Checked="List_Works_Checked" Unchecked="List_Works_Unchecked" IsChecked="{Binding AreAllWorksSelected}"/>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Works}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,10" Padding="10" Background="White">
                                <StackPanel>
                                    <CheckBox Name="WorkCheckbox" IsChecked="{Binding IsSelected}" Checked="WorkCheckbox_Checked" Unchecked="WorkCheckbox_Unchecked"/>
                                    <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5" Text="{Binding Name}"/>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Margin="0,0,0,4">
                                            <Run Text="Source : "/>
                                            <Run Text="{Binding Source}" />
                                        </TextBlock>
                                        <TextBlock Margin="0,0,0,4">
                                            <Run Text="Target : "/>
                                            <Run Text="{Binding Target}" />
                                        </TextBlock>
                                        <TextBlock Margin="0,0,0,4">
                                            <Run Text="Type : "/>
                                            <Run Text="{Binding Type}" />
                                        </TextBlock>
                                        <TextBlock Margin="0,0,0,4">
                                            <Run Text="État : "/>
                                            <Run Text="{Binding State}" />
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">

                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>


    </Grid>
</Window>
<Window x:Class="Version_2._0.View.Popup.SettingsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0.View.Popup"
        xmlns:buttons="clr-namespace:Version_2._0.View.Button"
        mc:Ignorable="d"
        Title="SettingsPopup" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid Background="White" Opacity=".75" Panel.ZIndex="10"/>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="11" Width="350">
                <Border Padding="16">
                    <StackPanel>
                        <TextBlock
                            TextAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,0,0,10"
                            Text="Settings" />

                        <TextBlock
                            Visibility="Collapsed"
                            TextWrapping="Wrap"
                            x:Name="ErrorMessageTextBlock"
                            Margin="0,0,0,16"
                            Foreground="Red" />

                        <TextBlock Margin="0,0,0,4" Text="Languages:"/>
                        <ComboBox Margin="0,0,0,16" x:Name="LanguageComboBox">
                            <ComboBoxItem Content="English" IsSelected="True"/>
                            <ComboBoxItem Content="French" />
                        </ComboBox>

                        <TextBlock Margin="0,0,0,4" Text="Middleware:"/>
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4" Margin="0,0,0,16">
                            <TextBox x:Name="MiddlewareTextBox" BorderThickness="0"/>
                        </Border>

                        <TextBlock Margin="0,0,0,4" Text="Extension to encrypt:"/>
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4" Margin="0,0,0,16">
                            <TextBox x:Name="EncryptionTextBox" BorderThickness="0"/>
                        </Border>

                        <TextBlock Margin="0,0,0,4" Text="Log file extension:"/>
                        <ComboBox Margin="0,0,0,16" x:Name="LogFileComboBox">
                            <ComboBoxItem Content=".JSON" IsSelected="True"/>
                            <ComboBoxItem Content=".XML" />
                        </ComboBox>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <buttons:CancelButton Grid.Column="1" Margin="0,0,8,0"/>
                            <!-- <buttons:ConfirmButton Grid.Column="0" Margin="8,0,0,0"/> -->
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>

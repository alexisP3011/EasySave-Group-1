<Window x:Class="Version_2._0.View.Popup.SettingsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0.View.Popup"
        xmlns:buttons="clr-namespace:Version_2._0.View.Button"
        mc:Ignorable="d"
        Title="SettingsPopup" Height="500" Width="800">
    <Grid>
        <Grid>
            <Grid Background="White" Opacity=".75" Panel.ZIndex="10"/>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="11" Width="350">
                <Border Padding="16">
                    <StackPanel>
                        <TextBlock
                            TextAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,0,0,10"
                            Text="Settings" />

                        <TextBlock
                            Visibility="Collapsed"
                            TextWrapping="Wrap"
                            x:Name="ErrorMessageTextBlock"
                            Margin="0,0,0,16"
                            Foreground="Red" />

                        <TextBlock Margin="0,0,0,4" Text="Languages:"/>
                        <ComboBox Margin="0,0,0,16" x:Name="LanguageComboBox">
                            <ComboBoxItem Content="English" IsSelected="True"/>
                            <ComboBoxItem Content="French" />
                        </ComboBox>

                        <TextBlock Margin="0,0,0,4" Text="Middleware:" />
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4" Margin="0,0,0,16">
                            <TextBox x:Name="MiddlewareTextBox" BorderThickness="0" Text="" />
                        </Border>

                        <TextBlock Margin="0,0,0,4" Text="Extension to encrypt:"/>
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4" Margin="0,0,0,16">
                            <TextBox x:Name="EncryptionTextBox" BorderThickness="0"/>
                        </Border>

                        <TextBlock Margin="0,0,0,4" Text="Encryption Key:" />
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4" Margin="0,0,0,16">
                            <TextBox x:Name="KeyTextBox" BorderThickness="0"/>
                        </Border>

                        <TextBlock Margin="0,0,0,4" Text="Encryption Path:" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4">
                                <TextBox x:Name="ExtensionPathTextBox" Grid.Column="0" BorderThickness="0"/>
                            </Border>

                            <Button x:Name="_3DotSource"
                                    Grid.Column="1"
                                    Width="32" 
                                    Margin="4,0,0,0"
                                    ToolTip="Browse">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <TextBlock Text="..."
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Margin="0,0,0,4" Text="Log file extension:"/>
                        <ComboBox Margin="0,0,0,16" x:Name="LogFileComboBox">
                            <ComboBoxItem Content=".JSON" IsSelected="True"/>
                            <ComboBoxItem Content=".XML" />
                        </ComboBox>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <buttons:CancelButton Grid.Column="1" Margin="0,0,8,0"/>
                            <Button x:Name="ConfirmButton" Grid.Column="0" Click="ConfirmButton_Click" Margin="0,0,8,0"
        Height="40" Background="#4CAF50" Foreground="White" BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="8">
                                            <TextBlock Text="Create"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>

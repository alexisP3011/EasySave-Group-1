<Window x:Class="Version_2._0.View.PopUp.ConfirmationPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0.View.PopUp"
        xmlns:buttons="clr-namespace:Version_2._0.View.Button"
        mc:Ignorable="d"
        Title="ConfirmationPopUp" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label
            HorizontalAlignment="Center"
            VerticalAlignment="Center" 
            Height="70" Width="515"
            FontSize="26"
            FontWeight="Bold"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">
            <Run Language="en-gb" Text="Are you sure to perform this action ?"/>
        </Label>

        <StackPanel Grid.Row="1">
            <buttons:CancelButton Margin="0,0,8,0" HorizontalAlignment="Left"/>
            <buttons:ConfirmButton Margin="8,0,0,0" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>

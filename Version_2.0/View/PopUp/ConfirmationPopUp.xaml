<Window x:Class="Version_2._0.View.PopUp.ConfirmationPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0.View.PopUp"
        xmlns:buttons="clr-namespace:Version_2._0.View.Button"
        mc:Ignorable="d"
        Title="ConfirmationPopUp" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Label
            HorizontalAlignment="Center"
            VerticalAlignment="Top" 
            Height="70" Width="516"
            FontSize="26"
            FontWeight="Bold"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center" Margin="0,180,0,0">
            <Run Language="en-gb" Text="Are you sure to perform this action ?"/>
        </Label>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <buttons:CancelButton Grid.Column="1" Padding="0,0,100,0" Margin="90,0,-90,0"/>
                <buttons:ConfirmButton Grid.Column="0" Padding="100,0,0,0" Click="ConfirmButton_Click" Margin="-90,0,90,0"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Version_2._0.View.PopUp.PopUpCreateWork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0.View.PopUp"
        xmlns:buttons="clr-namespace:Version_2._0.View.Button"
        mc:Ignorable="d"
        Title="PopUpCreateWork" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid Background="White" Opacity=".75" Panel.ZIndex="10"/>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="11" Width="350">
                <Border Padding="16">
                    <StackPanel>
                        <TextBlock
                            TextAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,0,0,10"
                            Text="Create / Update a backup work" />

                        <TextBlock
                            Visibility="Collapsed"
                            TextWrapping="Wrap"
                            x:Name="ErrorMessageTextBlock"
                            Margin="0,0,0,16"
                            Foreground="Red" />

                        <TextBlock Margin="0,0,0,4" Text="Name:" />
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4" Margin="0,0,0,16">
                            <TextBox x:Name="JobNameTextBox" BorderThickness="0"/>
                        </Border>

                        <TextBlock Margin="0,0,0,4" Text="Source of the folder:" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4">
                                <TextBox x:Name="SourcePathTextBox" Grid.Column="0" BorderThickness="0"/>
                            </Border>

                            <Button Grid.Column="1" 
                                    Content="..." 
                                    Width="32" 
                                    Margin="4,0,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <TextBlock Text="..."
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Margin="0,0,0,4" Text="Target:" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4">
                                <TextBox x:Name="TargetPathTextBox" Grid.Column="0" BorderThickness="0"/>
                            </Border>

                            <Button Grid.Column="1"
                                    Width="32" 
                                    Margin="4,0,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <TextBlock Text="..."
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Margin="0,0,0,4" Text="Type of work:" />
                        <ComboBox Margin="0,0,0,16" x:Name="JobTypeComboBox">
                            <ComboBoxItem Content="Complete" IsSelected="True"/>
                            <ComboBoxItem Content="Differential" />
                        </ComboBox>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <buttons:CancelButton Grid.Column="1" Margin="0,0,8,0"/>
                            <buttons:ConfirmButton Grid.Column="0" Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>

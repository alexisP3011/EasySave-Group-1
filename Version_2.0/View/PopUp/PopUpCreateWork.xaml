<Window x:Class="Version_2._0.View.PopUp.PopUpCreateWork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0.View.PopUp"
        xmlns:buttons="clr-namespace:Version_2._0.View.Button"
        mc:Ignorable="d"
        Title="Créer un travail" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid>
            <Grid Background="White" Opacity=".75" Panel.ZIndex="10" Margin="124,0,124,10"/>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="11" Width="350">
                <Border Padding="16">
                    <StackPanel>
                        <TextBlock
                            TextAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,0,0,10"
                            Text="Créer un travail de sauvegarde" />

                        <TextBlock
                            Visibility="Collapsed"
                            TextWrapping="Wrap"
                            x:Name="ErrorMessageTextBlock"
                            Margin="0,0,0,16"
                            Foreground="Red" />

                        <TextBlock Margin="0,0,0,4" Text="Nom:" />
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4" Margin="0,0,0,16">
                            <TextBox x:Name="JobNameTextBox" BorderThickness="0"/>
                        </Border>

                        <TextBlock Margin="0,0,0,4" Text="Source du dossier:" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4">
                                <TextBox x:Name="SourcePathTextBox" Grid.Column="0" BorderThickness="0"/>
                            </Border>

                            <Button x:Name="_3DotSource" Grid.Column="1" 
                                     
                                    Width="32" 
                                    Margin="4,0,0,0"  ToolTip="Parcourir">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <TextBlock Text="..."
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Margin="0,0,0,4" Text="Cible:" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="LightSlateGray" BorderThickness="2" CornerRadius="4">
                                <TextBox x:Name="TargetPathTextBox" Grid.Column="0" BorderThickness="0"/>
                            </Border>

                            <Button x:Name="_3DotTarget" Grid.Column="1"
                                    Width="32" 
                                    Margin="4,0,0,0" ToolTip="Parcourir">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <TextBlock Text="..."
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Margin="0,0,0,4" Text="Type de travail:" />
                        <ComboBox Margin="0,0,0,16" x:Name="JobTypeComboBox">
                            <ComboBoxItem Content="Complete" IsSelected="True"/>
                            <ComboBoxItem Content="Differential" />
                        </ComboBox>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="CancelButton" Grid.Column="1" Click="CancelButton_Click" Margin="8,0,0,0"
                                    Height="40" Background="#e0e0e0" BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <TextBlock Text="Annuler"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="ConfirmButton" Grid.Column="0" Click="ConfirmButton_Click" Margin="0,0,8,0"
                                    Height="40" Background="#4CAF50" Foreground="White" BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <TextBlock Text="Créer"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
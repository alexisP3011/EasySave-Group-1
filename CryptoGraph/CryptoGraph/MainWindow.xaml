<Window x:Class="CryptoGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoGraph"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Dossier à traiter :" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="FolderPathBox" Width="350" Height="30" IsReadOnly="True"/>
                <Button Content="Parcourir" Width="80" Height="30" Margin="10,0,0,0" Click="BrowseFolder_Click"/>
            </StackPanel>

            <TextBlock Text="Extension cible :" Margin="0,10,0,0"/>
            <ComboBox x:Name="ExtensionBox" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content=".txt" />
                <ComboBoxItem Content=".csv" />
                <ComboBoxItem Content=".json" />
                <ComboBoxItem Content=".xml" />
                <ComboBoxItem Content=".log" />
            </ComboBox>

            <TextBlock Text="Clé de chiffrement :" />
            <TextBox x:Name="KeyBox" Height="30" Margin="0,0,0,10"/>

            <Button Content="Chiffrer les fichiers" Height="40" Click="EncryptAllButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
